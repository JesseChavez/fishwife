require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('mizuno', '0.3.6') do |p|
    p.description = "Jetty handler for Rackup"
    p.summary = "Implements Rack::Handler::Mizuno"
    p.url = "http://github.com/madwombat/rack-handler-jetty"
